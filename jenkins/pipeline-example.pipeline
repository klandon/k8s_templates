pipeline {
  agent {
    kubernetes {
      //cloud 'kubernetes'
      label 'mypod'
      containerTemplate {
        name 'ubuntu'
        image 'ubuntu:16.04'
        ttyEnabled true
        command 'cat'
      }
    }
  }
  stages {
    stage('Run shell') {
      steps {
        sh 'apt-get update -y; apt-get install git -y'
      }
    }
  }
}
